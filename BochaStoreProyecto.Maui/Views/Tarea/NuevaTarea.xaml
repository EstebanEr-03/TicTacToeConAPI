<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BochaStoreProyecto.Maui.Views.Tarea.NuevaTarea"
             Title="NuevaTarea">
    
    <StackLayout Padding="20" Spacing="10">
        <Entry Placeholder="Ingresar Tarea"
               x:Name="EntryNombre"
               FontSize="18"
               BackgroundColor="#ecf0f1"
               PlaceholderColor="#bdc3c7"
               Margin="0,0,0,10"/>

        <Editor Placeholder="DescripciÃ³n de la Tarea"
                x:Name="EditorDescripcion"
                FontSize="18"
                BackgroundColor="#ecf0f1"
                PlaceholderColor="#bdc3c7"
                Margin="0,0,0,10"/>

        <Entry Placeholder="Estado de la Tarea"
               x:Name="EntryEstado"
               FontSize="18"
               BackgroundColor="#ecf0f1"
               PlaceholderColor="#bdc3c7"
               Margin="0,0,0,10"/>

        <Button Text="Guardar Tarea"
                FontSize="20"
                BackgroundColor="#3498db"
                TextColor="White"
                Clicked="OnClickGuardarNuevaTarea"
                CornerRadius="5"
                HeightRequest="50"/>

    </StackLayout>
</ContentPage>